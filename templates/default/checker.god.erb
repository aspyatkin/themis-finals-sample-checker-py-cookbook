(0...<%= @processes %>).to_a.each do |num|
  God.watch do |w|
    w.group = '<%= @service_alias %>'
    w.name = "<%= @service_alias %>-#{num}"
    w.dir = '<%= @basedir %>'
    w.uid = '<%= @user %>'
    w.gid = '<%= @group %>'
    w.log = "<%= @basedir %>/logs/checker-#{num}.log"
    w.start = '<%= @basedir %>/.virtualenv/bin/python checker.py'
    w.env = {
      'BEANSTALKD_URI' => '<%= @beanstalkd_uri %>',
      'LOG_LEVEL' => '<%= @log_level %>',
      'TUBE_LISTEN' => 'themis.service.<%= @service_alias %>.listen',
      'TUBE_REPORT' => 'themis.service.<%= @service_alias %>.report'
    }
    w.stop_signal = 'INT'
    w.keepalive
  end
end
